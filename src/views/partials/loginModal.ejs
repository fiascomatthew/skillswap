<!-- Modal Overlay -->
<div class="modal modal--overlay" id="loginModal">
  <div class="modal__content">
    <button class="modal__close-button"><i class="modal_close-icon fa-solid fa-xmark"></i></button>
    <div class="modal__header">
      <img class="modal__logo" src="/images/logo.png" alt="logo skillswap">
      <h2 class="modal__title">Se connecter</h2>
      <p class="modal__subtitle">
        Pas encore membre ? 
        <button class="modal__alt secondary-button">S'inscrire</button>
      </p>
    </div>
    <form class="modal__form" id="loginForm" method="POST" action="/login">
      <div class="modal__wrapper">
        <label for="email" class="modal__label">Adresse e-mail</label>
        <input type="email" id="loginEmail" name="email" class="modal__input" placeholder="name@example.com">
        <p class="modal__error" id="loginEmailError">Adresse e-mail requise</p>
      </div>
      
      <div class="modal__wrapper">
        <label for="password" class="modal__label">Mot de passe</label>
        <input type="password" id="loginPassword" name="password" class="modal__input" placeholder="********">
        <p class="modal__error" id="loginPasswordError">Mot de passe requis</p>
      </div>

      <p class="modal__global-error" id="loginError"> Adresse e-mail ou mot de passe incorrect. Veuillez rÃ©essayer.</p>

      <button type="submit" class="modal__submit-button call-to-action">Se connecter</button>
    </form>
  </div>
</div>