<!-- Modal Overlay -->
<div class="modal modal--overlay" id="editUserModal">
  <div class="modal__content">
    <button class="modal__close-button" id="editUserCloseBtn">
      <i class="modal_close-icon fa-solid fa-xmark"></i>
    </button>

    <div class="modal__header">
      <h2 class="modal__title">Modifier mes infos</h2>
      <p class="modal__subtitle"></p>
    </div>

    <form class="modal__form" method="POST" action="/dashboard/update">
      <div class="modal__wrapper">
        <label for="firstname" class="modal__label">Prénom</label>
        <input type="text" id="firstname" name="firstname" class="modal__input" value="<%= user.firstname %>">
      </div>

      <div class="modal__wrapper">
        <label for="lastname" class="modal__label">Nom</label>
        <input type="text" id="lastname" name="lastname" class="modal__input" value="<%= user.lastname %>">
      </div>

      <div class="modal__wrapper">
        <label for="location" class="modal__label">Ville</label>
        <input type="text" id="location" name="location" class="modal__input" value="<%= user.location %>">
      </div>

      <div class="modal__wrapper">
        <label for="email" class="modal__label">Adresse e-mail</label>
        <input type="email" id="email" name="email" class="modal__input" value="<%= user.email %>">
      </div>

      <p class="modal__global-error" id="editUserError">Une erreur est survenue. Merci de réessayer.</p>

      <button type="submit" class="modal__submit-button call-to-action">Mettre à jour</button>
    </form>
  </div>
</div>
